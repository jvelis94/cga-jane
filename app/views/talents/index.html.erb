<div class="container-xl">
    <div class="row">
        <div class='col-lg-2 mt-4 pl-2' id="filter-box">
            <div>
                <h3 class="font-weight-bold mt-4">Filters</h3>
                <div class="accordion" id="accordionExample">
                    <%= simple_form_for :filter, url: talents_path, method: "GET", remote: true do |f| %>
                        <div class="card">
                            <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <%= f.label :entities, "Entities" %>
                            </div>
                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <%= f.input :entities, label: false, collection: @entities, as: :check_boxes, legend_tag: false %>
                            </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                                <%= f.label :location, "Locations" %>
                            </div>
                            <div id="collapseTwo" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <%= f.input :locations, label: false, collection: @locations, as: :check_boxes, legend_tag: false  %>
                            </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                                <%= f.label :leadership, "Leadership" %>
                            </div>
                            <div id="collapseThree" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <%= f.input :leadership, label: false, collection: ['Leadership'], as: :check_boxes, legend_tag: false  %>
                            </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
                                <%= f.label :business_units, "Business Units" %>
                            </div>
                            <div id="collapseFour" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <%= f.input :business_units, label: false,  collection: @business_units, as: :check_boxes, legend_tag: false  %>
                            </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#collapseFive" aria-expanded="true" aria-controls="collapseFive">
                                <%= f.label :teams, "Teams", class: "col-form-label" %><br>
                            </div>
                            <div id="collapseFive" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <%= f.label :capital_teams, "Jane Street Capital", class: 'custom-col-label' %>
                                <%= f.input :capital_teams, collection: @capital_teams, as: :check_boxes, label: false, legend_tag: false %>

                                <%= f.label :execution_teams, "Jane Street Execution Services", class: 'custom-col-label' %>
                                <%= f.input :execution_teams, collection: @execution_teams, as: :check_boxes, label: false, legend_tag: false%>
                            </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#collapseSix" aria-expanded="true" aria-controls="collapseSix">
                                <%= f.label :sub_teams, "Sub-Teams" %>
                            </div>
                            <div id="collapseSix" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <%= f.input :sub_teams, label: false, collection: @sub_teams, as: :check_boxes, legend_tag: false  %>
                            </div>
                            </div>
                        </div>
                </div>                    
                    
                <%= link_to "Reset", talents_path  %>
                <% end %>
            </div>
        </div>
        <div class='col-lg-10'>
            <%= render 'talents_list', talents: @talents %>
        </div>
    </div>
</div>


