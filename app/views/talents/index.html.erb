<div class="container-xl">
    <div class="row">
        <div class='col-lg-2 mt-4' id="filter-box">
            <div>
                <h3 class="font-weight-bold mt-4">Filters</h3>
                <%= simple_form_for :filter, url: talents_path, method: "GET", remote: true do |f| %>
                    <%= f.input :locations, label: "Locations", collection: @locations, as: :check_boxes, include_blank: false %>
                    <%= f.input :leadership, label: "Leadership", collection: ['Leadership'], as: :check_boxes, include_blank: false %>
                    <%= f.input :business_units, label: "Business Units",  collection: @business_units, as: :check_boxes, include_blank: false %>
                    <%= f.input :teams, label: "Teams", collection: @teams, as: :check_boxes, include_blank: false %>
                    <%= f.input :sub_teams, label: "Sub-Teams", collection: @sub_teams, as: :check_boxes, include_blank: false %>
                    <%= f.input :entities, label: "Entities", collection: @entities, as: :check_boxes, include_blank: false %>                    
                    <%= link_to "Reset", talents_path  %>
                <% end %>
            </div>
        </div>
        <div class='col-lg-10'>
            <h3 class="text-center mt-4"><%= @talents.count %> results available</h3>        
            <%= render 'talents_list', talents: @talents %>
        </div>
    </div>
</div>


