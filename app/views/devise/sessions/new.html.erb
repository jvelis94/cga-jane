<div class='form-page'>
  <div class='form-size'>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class='img-div'>
      <%= image_tag 'cgaLogo.png', class: "img-logo"%>
    </div>

      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    placeholder: "email",
                    label: false,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    placeholder: "email",
                    label: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class:'btn btn-primary mb-4'  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>